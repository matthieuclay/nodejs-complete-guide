extends ../layouts/main-layout.pug

block styles
	link(rel="stylesheet", href="/css/forms.css")
	link(rel="stylesheet", href="/css/auth.css")

block content
	main
		if errorMessage
			.user-message.user-message--error #{errorMessage}
		form.signup-form(action="/signup", method="POST", novalidate)
			.form-control
				label(for="email") Email
				input#email(type="email", name="email", value=oldInput.email)
			.form-control
				label(for="password") Password
				input#password(type="password", name="password", value=oldInput.password)
			.form-control
				label(for="confirmPassword") Confirm password
				input#confirmPassword(type="password", name="confirmPassword", value=oldInput.confirmPassword)
			input(type="hidden", name="_csrf", value=csrfToken)
			button.btn(type="submit") Signup