extends ../layouts/main-layout.pug

block styles
	link(rel="stylesheet", href="/css/orders.css")

block content
	main
		if orders.length > 0
			ul.orders
				each o in orders
					li.orders__item
						h1 Order - ##{o._id}
						ul.orders_products
							each p in o.items
								li.orders__products-item #{p.title} (#{p.quantity})
		else
			h1 Nothing there!